<div class="container w- mt-5">
  <select class="form-select" aria-label="Default select example">
    <option selected>類別</option>
    <option value="1">One</option>
    <option value="2">Two</option>
    <option value="3">Three</option>
  </select>
  <div class="d-flex mt-3 ms-3">
    <p>總金額</p>
    <h1 class="ms-3" style="color: orangered;">{{totalAmount}}</h1>
  </div>
  <ol class="list-group mt-3">
    {{#each records}}
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <i class="fa-solid fa-utensils fa-2xl align-self-stretch d-flex align-items-center me-2" style="color: #208081;"></i>
      <div class="ms-2 me-auto">
        <div class="fw-bold">{{this.name}}</div>
        {{this.date}}
      </div>
      <div class="align-self-stretch d-flex align-items-center me-2 me-auto fs-3">
        {{this.amount}}
      </div>
      <div class="align-self-stretch d-flex align-items-center me-1 ms-auto">
        <a href="/records/{{this.id}}/edit" class="btn btn-outline-secondary me-1">修改</a>
        <form action="/records/{{this.id}}?_method=DELETE" method="post">
          <button type="submit" class="btn btn-outline-secondary"  onclick="return confirm('你確定要刪除嗎?')">刪除</button>
        </form>
      </div>
    </li>
    {{/each}}
  </ol>
  <div class="d-flex justify-content-center mt-5" >
    <a href="/records/new" class="btn btn-primary btn-lg w-50" style="background-color: orangered;">新增支出</a>
  </div>
</div>

